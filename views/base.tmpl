#def pp_button($amount=0, $cc_logo=False)
	  <form action="https://www.paypal.com/cgi-bin/webscr" method="post">
	    #if $amount > 0
	    <input type="hidden" name="amount" value="$amount"/>
	    #end if
	    <input type="hidden" name="business" value="paypal@crudem.org"/>
	    <input type="hidden" name="cmd" value="_donations"/>
	    <input type="hidden" name="item_name" value="100 Beds for Haiti"/>
	    <input type="hidden" name="item_number" value="100 Beds for Haiti"/>
	    <input type="hidden" name="cpp_header_image" value="http://www.100bedsforhaiti.com/images/100beds_sm.jpg"/>
	    <input type="hidden" name="image_url" value="http://www.100bedsforhaiti.com/images/100beds_sm.jpg"/>
	    <input type="hidden" name="page_style" value="primary"/>
	    #if $cc_logo
	    <input type="image" border="0" src="https://www.paypal.com/en_US/i/btn/btn_donateCC_LG.gif" name="submit" alt="PayPal - The safer, easier way to donate online!">
	    #else
	    <input type="image" border="0" src="https://www.paypal.com/en_US/i/btn/btn_donate_LG.gif" name="submit" alt="PayPal - The safer, easier way to donate online!">
	    #end if
	  </form>
#end def

